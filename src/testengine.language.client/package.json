{
  "name": "testengine-lsp-client",
  "displayName": "Test Engine LSP Client",
  "description": "A client for the Power Apps Test Engine Language Server",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "activationEvents": [
    "onLanguage:plaintext"
  ],
  "main": "./out/client.js",
  "contributes": {
    "languages": [
      {
        "id": "plaintext",
        "aliases": [
          "Plaintext",
          "plaintext"
        ],
        "extensions": [
          ".txt"
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "properties": {
        "testEngineLspClient.serverPort": {
          "type": "number",
          "default": 8080,
          "description": "The port on which the language server is running."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.14.12",
    "typescript": "^4.0.0",
    "vscode": "^1.1.37",
    "vscode-languageclient": "^9.0.1"
  }
}