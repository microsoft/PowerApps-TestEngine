<Application x:Class="OpenAITestGenerator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:OpenAITestGenerator"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"             
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <sys:Double x:Key="FontSize">20</sys:Double>
        
        <Style x:Key="Splitter" TargetType="{x:Type GridSplitter}">
        </Style>
        
        <Style x:Key="HorizontalSplitter" TargetType="{x:Type GridSplitter}" BasedOn="{StaticResource Splitter}">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Height" Value="2"/>
        </Style>

        <Style x:Key="VerticalSplitter" TargetType="{x:Type GridSplitter}" BasedOn="{StaticResource Splitter}">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Width" Value="2"/>
        </Style>
    </Application.Resources>
</Application>
