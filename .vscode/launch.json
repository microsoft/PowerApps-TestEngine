    "version": "0.2.0",
    "configurations": [
      {
        "name": "Run build targets",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build targets",
        "program": "${workspaceFolder}/targets/bin/Debug/net6.0/targets.dll",
        "args": [
          "build",
          "-c", "release"
        ],
        "cwd": "${workspaceFolder}",
        "stopAtEntry": false,
        "console": "internalConsole"
      }
    ]
}
